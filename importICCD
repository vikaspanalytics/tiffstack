import os
import numpy as np
import matplotlib.image as mpimg
import matplotlib.pyplot as plt
import random

p = "C:/Users/vikas/Documents/Python Scripts/mouseN_IRF_01"
fN = "B00021_Delay=9300ps.tif"
p1 = os.path.join(p, fN)
im = mpimg.imread(p1)  # reading and saving the image in n-dimension numpy array
print(type(im))  # type() function, a built-in, function to understand the type of the object
imgplot = plt.imshow(im)
plt.colorbar()
# plt.tick_params(
#     axis='both',          # changes apply to the x-axis
#     which='both',      # both major and minor ticks are affected
#     bottom=False,      # ticks along the bottom edge are off
#     top=False,         # ticks along the top edge are off
#     right = False,
#     left = False,
#     labelbottom=False, # labels along the bottom edge are off
#     labelleft=False)
plt.axis('off')     # putting all the axis off
# plt.clim(0, 2000)
plt.show()

# print(type(imgplot))  # class 'matplotlib.image.AxesImage'

k = os.listdir(p)
le = len(k)
img0 = mpimg.imread(os.path.join(k[0], p1))
(a, b) = np.shape(img0)
tpsfs = np.zeros([a, b, le-1])
print(tpsfs.shape)
print(np.shape(tpsfs[:, :, 7]))

for count, file in enumerate(os.listdir(p)):
    # Check whether file is in text format or not
    if file.endswith(".tif"):
        imt = mpimg.imread(os.path.join(file, p1))
        tpsfs[:, :, count] = imt

print(tpsfs.shape)
# inten = np.sum(tpsfs, axis=2)
# plt.imshow(inten)
# plt.colorbar()
# plt.show()
x1 = random.randint(0, a)
y1 = random.randint(0, b)
# x1 = 227
# y1 = 162
print(x1, y1)
y = tpsfs[x1, y1, :]
print(type(y))
plt.plot(y)
plt.show()
